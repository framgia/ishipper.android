<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/all_margin_medium"
    android:layout_marginRight="@dimen/all_margin_medium"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/avatar_search_size"
        android:layout_height="@dimen/avatar_search_size"
        android:layout_marginBottom="@dimen/all_margin_small"
        android:layout_marginTop="@dimen/all_margin_small"
        android:src="@drawable/ic_done"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/all_margin_small"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="3"
            android:text="@string/message_phone_validate_sent"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:layout_marginTop="@dimen/_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/tvTimePost"
            android:text="32 minutes ago"
            android:textSize="@dimen/text_size_time"/>
    </LinearLayout>
</LinearLayout>
