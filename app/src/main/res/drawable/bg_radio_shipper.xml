<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="50">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreenDark"/>
            <corners android:bottomLeftRadius="@dimen/register_bg_radius"
                     android:topLeftRadius="@dimen/register_bg_radius"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreenDark"/>
            <corners android:bottomLeftRadius="@dimen/register_bg_radius"
                     android:topLeftRadius="@dimen/register_bg_radius"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <corners android:bottomLeftRadius="@dimen/register_bg_radius"
                     android:topLeftRadius="@dimen/register_bg_radius"/>
        </shape>
    </item>

</selector>
